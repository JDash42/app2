<p id="notice"><%= notice %></p>

<h1>Announcements</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <! -- check to see if the announcement has been seen by user >
    <% @announcements.each do |announcement| %>
      <tr>
        <td><%= announcement.title %></td>
        <td><%= announcement.content %></td>
        <td><%= announcement.user.email %></td>
        <td><%= link_to 'Show', announcement %></td>
        <% if current_user%>
          <% current_user.announcements.push(announcement.id) %>
          <td><%= link_to 'Seen', announcements_path %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Announcement', new_announcement_path %>
